{
  "name": "ip-hook",
  "version": "1.0.0",
  "description": "publish ip to anywhere",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "tsc": "tsc",
    "build": "npm run clean && npm run tsc",
    "build:docker": "docker build --tag ip-hook .",
    "publish": "npm run build && npm run build:docker",
    "start": "node .",
    "test": "ava -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arylo/ip-hook.git"
  },
  "keywords": [
    "ip",
    "docker",
    "publish"
  ],
  "author": "AryloYeung <arylo.open@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arylo/ip-hook/issues"
  },
  "homepage": "https://github.com/Arylo/ip-hook#readme",
  "devDependencies": {
    "@types/koa": "^2.13.3",
    "@types/node": "^15.12.2",
    "@types/node-fetch": "^2.5.10",
    "@types/node-schedule": "^1.3.1",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "koa": "^2.13.1",
    "node-fetch": "^2.6.1",
    "node-schedule": "^1.3.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
